@section Scripts
{
    <script src="@Url.Content("~/Scripts/ArticuloProveedor.js")"></script>
}
<h2>Articulos de un proveedor</h2>
<table class="table">
    <tr>
        <td><label>Proveedor</label></td>
        <td>
            <select id="slcProveedores"></select>
        </td>
    </tr>
    <tr>
        <td><label>Articulo</label></td>
        <td>
            <select id="slcArticulos"></select>
        </td>
    </tr>
    <tr>
        <td><label>Costo</label></td>
        <td><input type="number" id="numCosto" class="form-control" /></td>
    </tr>
    <tr>
        <td><input type="button" value="Registrar" onclick="Agregar()" class="btn btn-default" /></td>
        <td><label id="lblRes"></label></td>
    </tr>
    <tr>
        <td><input type="button" value="Salir" onclick="Salir()" class="btn btn-default" /></td>
        <td></td>
    </tr>
</table>
<h2>Lista de articulos del proveedor</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <td><label>Articulo</label></td>
            <td><label>Precio</label></td>
            <td><label>Fecha</label></td>
        </tr>
    </thead>
    <tbody id="tbyArticulosProveedor"></tbody>
</table>

