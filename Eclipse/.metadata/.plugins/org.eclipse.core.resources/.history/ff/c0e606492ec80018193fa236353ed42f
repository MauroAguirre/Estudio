package Algoritmo2;

public class Stack {
	private String[] stack;
	
	public Stack() {
		stack = new String[10];
	}
	public void mostrar() {
		for(int i=0;i<10;i++) {
			if(stack[i]==null)
				break;
			System.out.println(stack[i]);
		}
	}
	public void push(String s) {
		for(int i=stack.length-1;i>0;i--) {
			stack[i]=stack[i-1];
		}
		stack[0]=s;
	}
	public boolean isEmpty() {
		return stack[0]==null;
	}
	public String top() {
		return stack[0];
	}
	public void pop() {
		for(int i=stack.length-1;i>0;i--) {
			stack[i-1]=stack[i];
		}
	}
	public void clean() {
		for(int i=0;i<stack.length;i++) {
			stack[i]=null;
		}
	}
}
