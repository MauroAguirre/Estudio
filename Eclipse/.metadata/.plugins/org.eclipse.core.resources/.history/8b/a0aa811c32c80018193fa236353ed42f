package Algoritmo2;

public class Stack {
	private String[] stack;
	
	public String[] getStack() {
		return stack;
	}
	
	public Stack() {
		stack = new String[10];
	}
	public void mostrar() {
		for(int i=0;i<10;i++) {
			if(stack[i]==null) {
				System.out.println();
				break;
			}	
			System.out.println(stack[i]);
		}
	}
	public void push(String s) {
		for(int i=stack.length-1;i>0;i--) {
			stack[i]=stack[i-1];
		}
		stack[0]=s;
	}
	public boolean isEmpty() {
		return stack[0]==null;
	}
	public String top() {
		return stack[0];
	}
	public void pop() {
		for(int i=0;i<stack.length-1;i++) {
			stack[i]=stack[i+1];
		}
		stack[9]=null;
	}
	public void clean() {
		for(int i=0;i<stack.length;i++) {
			stack[i]=null;
		}
	}
	public Stack borrar(String e,Stack s) {
		Stack nuevo = new Stack();
		for(int i=0;i<s.getStack().length;i++) {
			
		}
	}
}
